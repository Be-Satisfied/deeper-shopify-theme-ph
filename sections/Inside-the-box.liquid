<section
  class="section-tabs {{ section.settings.color_bg }}"
  data-section-id="{{ section.id }}"
  data-section-type="tabs"
  style="--PT: {{ section.settings.padding_top }}px; --PB: {{ section.settings.padding_bottom }}px;">
  <div class="wrapper section-padding inside-the-box">
    <div class="inside-the-box__title">Inside The Box</div>
    <div class="inside-the-box__body">
      <div class="inside-the-box__items">
        <div class="inside-the-box__item">
          <img src="https://cdn.shopify.com/s/files/1/0256/1038/7504/files/div.png?v=1708597553" />
          <div>
            <span class="inside-the-box__item_desc">Deeper Connect Air</span><br/>
            <span class="inside-the-box__item_desc">× 1</span>
          </div>
        </div>
        <div class="inside-the-box__item">
          <img src="https://cdn.shopify.com/s/files/1/0256/1038/7504/files/Air-USB.png?v=1711003270" />
          <div>
            <span class="inside-the-box__item_desc">
              <span style="display:inline-block">USB C To USB A Adapter</span><br/>
            <span class="inside-the-box__item_desc">× 1</span>
          </div>
        </div>  
        <div class="inside-the-box__item">
          <img src="https://cdn.shopify.com/s/files/1/0256/1038/7504/files/div_1.png?v=1708597586" />
          <div>
            <span class="inside-the-box__item_desc">
              <span style="display:inline-block">Instruction Guide</span><br/>
            <span class="inside-the-box__item_desc">× 1</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{{ 'inside-the-box.css' | asset_url | stylesheet_tag }}
<style>
  @media screen and (max-width: 1024px) { 
    .inside-the-box__items{
      width: 100%; 
      align-items: flex-start;
      justify-content: center;
      min-width: 520px;
    }
  }
</style>

{% schema %}
  {
    "name": "Inside The Box",
    "settings": [
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 180,
        "step": 2,
        "unit": "px",
        "label": "Padding top",
        "default": 64
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 180,
        "step": 2,
        "unit": "px",
        "label": "Padding bottom",
        "default": 64
      }
    ],
    "presets": [
      {
        "name": "Inside The Box",
        "category": "Product"
      }
    ]
  }
{% endschema %}