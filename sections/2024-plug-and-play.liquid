  }

  .Plug_and_Play_item {
    flex: 1;
    max-width: 325px;
    overflow: hidden;
  }

  .Plug_and_Play_item_img {
    width: 100%;
  }

  .Plug_and_Play_item_img img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .Plug_and_Play_item_title {
    color: #1d1d1f;
    font-size: 20px;
    font-style: normal;
    font-weight: 700;
    line-height: 26px; /* 130% */
    text-transform: uppercase;
    margin: 20px 0;
