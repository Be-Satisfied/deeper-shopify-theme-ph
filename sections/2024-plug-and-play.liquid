    .Plug_and_Play h2 {
      font-size: 32px;
    }

    .Plug_and_Play_text {
      font-size: 16px;
      margin-bottom: 20px;
    }

    .Plug_and_Play_item_title {
      font-size: 18px;
    }

    .Plug_and_Play {
      padding: 30px 0;
    }

    .Plug_and_Play_list {
      margin-top: 20px;
      padding: 0 10px;
      overflow-x: auto;
      padding-bottom: 20px;
      flex-wrap: nowrap;
      justify-content: space-between;
    }
    .Plug_and_Play_item {
      flex: none;
      min-width: 325px;
    }
  }
</style>
