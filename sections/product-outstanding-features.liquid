<script>
  document.addEventListener('DOMContentLoaded', function () {
    var options = document.querySelectorAll('.outstanding-feature__select-item');
    var contentItems = document.querySelectorAll('.outstanding-feature__content-item');
    var descItems = document.querySelectorAll('.outstanding-feature__desc-item');

    options.forEach(function (option) {
      option.addEventListener('click', function () {
        var id = option.id;
        var contentId = id + '-content';
        var descId = id + '-desc';

        contentItems.forEach(function (item) {
          item.classList.remove('active');
        });
        descItems.forEach(function (item) {
          item.classList.remove('active');
        });
        document.getElementById(contentId).classList.add('active');
        document.getElementById(descId).classList.add('active');
        options.forEach(function (opt) {
          opt.classList.remove('selected');
        });
        option.classList.add('selected');
      });
    });
  });

  document.addEventListener('DOMContentLoaded', function () {
    let video = document.querySelector('#quick-setup-content__Video');
    let quick_setup_content = document.querySelector('#quick-setup-content');

    quick_setup_content &&
      quick_setup_content.addEventListener('click', function () {
        video.style.display = 'block';
      });
  });

  function videoPlay() {
    let e = document.querySelector('#quick-setup-content-air-video');
    e.style.display = 'block'; // 显示视频
    if (video.paused) {
      video.play(); // 播放视频
    } else {
      video.pause(); // 暂停视频
    }
  }
</script>
